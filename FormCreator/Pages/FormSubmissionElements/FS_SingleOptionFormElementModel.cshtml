@using ClassLibraryModel
@model GeneralFormElementModel

<div class="bg-white rounded-1 border-1 border-secondary border d-flex flex-column p-3 m-1" id="muop-@Model.Index">
    <input asp-for="QuestionType" name="Submission.Submissions[@Model.Index].QuestionType" type="hidden" />
    <input asp-for="Index" name="Submission.Submissions[@Model.Index].Index" type="hidden" />
    <div class="d-flex flex-row align-items-center justify-content-between">
        <h5 class="text-center">@Model.Question</h5>
    </div>
    <div class="border-bottom flex-grow-1 border-dark"></div>

    <div class="form-group">
        <div id="radioButtons-@Model.Index">
            @for (int i = 0; i < Model.Options.Count; i++)
            {
                <div class="d-flex flex-row align-items-center">
                    <input class="form-check-input align-self-middle" type="radio" name="Submission.Submissions[@Model.Index].Answer" value="@i" id="rb-@(Model.Index)-@i" required>
                    <label class="m-1 form-control-plaintext w-auto flex-grow-1 user-select-none" for="rb-@(Model.Index)-@i">@Model.Options[i]</label>
                </div>
            }
        </div>
    </div>
</div>