@page "/forms/edit/{id}/{handler?}"
@model FormCreator.Pages.Forms.AlterFormModel
@using ClassLibraryModel
@{
    ViewData["Title"] = "New form";
}
@Html.EditorForModel()

@if (TempData["UserError"] != null)
{
    <div class="alert alert-danger alert-dismissible d-flex" role="alert">
        <span>@TempData["UserError"]</span>
        <span type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close"></span>
    </div>
}
@if (TempData["UserSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible d-flex" role="alert">
        <span>@TempData["UserSuccess"]</span>
        <span type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close"></span>
    </div>
}
@if (Model.Form != null)
{
    <form method="post" id="mainForm">
        <input type="hidden" asp-for="Form.Id" readonly>
        <input type="hidden" asp-for="Form.OwnerId" readonly>
        <div class="container">
            <div class="d-flex justify-content-between m-1">
                <div class="d-flex">
                    <a class="btn btn-sm btn-outline-secondary m-1" asp-page="/Forms/UserForms" asp-route-id="@User?.Identity?.Name">← Back to my forms</a>
                </div>
                <div class="d-flex justify-content-end align-items-center">
                    <div class="form-check form-switch m-1">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="Form.CanBeSearched">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Form visibility</label>
                    </div>
                    <div class="dropdown">
                        <a class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" href="#" data-bs-toggle="dropdown" id="addFormElementDropdown" aria-expanded="false">
                            Add Form Element
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="addFormElementDropdown">
                            <li><a asp-page-handler="Add" asp-route-type="ShortText" class="dropdown-item add-form-element" >Short Text</a></li>
                            <li><a asp-page-handler="Add" asp-route-type="LongText" class="dropdown-item add-form-element">Long Text</a></li>
                            <li><a asp-page-handler="Add" asp-route-type="Date" class="dropdown-item add-form-element">Date</a></li>
                            <li><a asp-page-handler="Add" asp-route-type="Time" class="dropdown-item add-form-element">Time</a></li>
                            <li><a asp-page-handler="Add" asp-route-type="SingleOption" class="dropdown-item add-form-element">Single Option</a></li>
                            <li><a asp-page-handler="Add" asp-route-type="MultipleOptions" class="dropdown-item add-form-element">Multiple Options</a></li>
                        </ul>
                    </div>
                    <a class="btn btn-sm btn-outline-dark m-1" asp-page-handler="Get" asp-route-reset="true">Revert</a>
                    <button type="submit" class="btn btn-sm btn-success m-1">Save changes</button>

                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <input class="card-title form-control-plaintext p-0 h4 " asp-for="Form.Name" />
                </div>
                <input class="card-header bg-white fs-7 form-control-plaintext" type="text" asp-for="Form.Description" placeholder="Description" />
                <div class="card-body bg-light" id="formElementsContainer">
                    @if ((Model?.Form?.FormElements?.Count ?? 0) == 0)
                    {
                        <div class="container mt-3 mx-auto">
                            <div class="text-center fs-5 mx-auto">
                                No elements
                            </div>
                        </div>
                    }
                    @foreach (var formElement in Model?.Form?.FormElements)
                    {
                        ViewData["fe_last"] = Model.Form.FormElements.Count - 1;
                        switch (formElement.QuestionType)
                        {
                            case QuestionType.ShortText:
                                <partial name="/Pages/FormElements/ShortTextFormElementModel.cshtml" for="@formElement" />
                                break;
                            case QuestionType.LongText:
                                <partial name="/Pages/FormElements/LongTextFormElementModel.cshtml" for="@formElement" />
                                break;
                            case QuestionType.Date:
                                <partial name="/Pages/FormElements/DateFormElementModel.cshtml" for="@formElement" />
                                break;
                            case QuestionType.Time:
                                <partial name="/Pages/FormElements/TimeFormElementModel.cshtml" for="@formElement" />
                                break;
                            case QuestionType.SingleOption:
                                <partial name="/Pages/FormElements/SingleOptionFormElementModel.cshtml" for="@formElement" />
                                break;
                            case QuestionType.MultipleOptions:
                                <partial name="/Pages/FormElements/MultipleOptionsFormElementModel.cshtml" for="@formElement" />
                                break;
                        }
                    }
                </div>
            </div>
        </div>
    </form>
}
<script>
    function submitForm()
    {
        var form = $('#mainForm').serializeArray();
        var formData = JSON.stringify(Object.fromEntries(form.map(x => [x.name, x.value])));
        $.ajax({
            type: "POST",
            url: location.href,
            data: formData,
            dataType: "json",
            contentType:"application/json",
            success: function (res) {
                location.reload()
            },
            error: function (xhr, textStatus, errorThrown) {
                console.log(xhr);
                console.log(textStatus);
                console.log(errorThrown);
            }
        });
        console.log(formData);
    }
</script>