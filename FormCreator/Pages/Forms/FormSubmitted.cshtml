@page "/submitted"
@model FormCreator.Pages.Forms.FormSubmittedModel
@{
    ViewData["Title"] = "Form submission result";
}
@if (Model.HasID)
{
    <div class="alert alert-success alert-dismissible d-flex" role="alert">
        <h3 class="mx-auto">The form was submitted.</h3>
    </div>
}
else
{
    <div class="alert alert-danger alert-dismissible d-flex" role="alert">
        <h3 class="mx-auto">Missing arguments.</h3>
    </div>
}